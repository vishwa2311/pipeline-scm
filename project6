pipeline {
    agent any
    options { timestamps() }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/vishwa2311/pipeline-scm.git',
                        credentialsId: 'github-pat'
                    ]],
                    extensions: [
                        [$class: 'CloneOption', depth: 1, noTags: false, shallow: true, reference: '', timeout: 10],
                        [$class: 'SubmoduleOption', disableSubmodules: false, recursiveSubmodules: true, trackingSubmodules: false]
                    ]
                ])
                bat '''
                    echo Checkout done
                    dir
                '''
            }
        }

        stage('Build') {
            steps {
                bat 'echo Building project...'
            }
        }
    }

    post {
        always {
            echo "âœ… Project6 done"
        }
    }
}
