pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['staging', 'production'], description: 'Target environment')
        booleanParam(name: 'ROLLBACK', defaultValue: false, description: 'Simulate rollback')
    }

    options { timestamps() }

    stages {
        stage('Deploy') {
            steps {
                script {
                    if (isUnix()) {
                        // Works on Linux/macOS agents
                        sh '''
                            echo "üöÄ Deploying to $ENV ..."
                            if [ "$ROLLBACK" = "true" ]; then
                                echo "üîÅ Rolling back to previous version..."
                            else
                                echo "‚¨ÜÔ∏è Deploying new version..."
                            fi
                            sleep 1
                        '''
                    } else {
                        // Works on Windows agents
                        bat """
                            @echo off
                            echo üöÄ Deploying to %ENV% ...
                            if "%ROLLBACK%"=="true" (
                                echo üîÅ Rolling back to previous version...
                                powershell -NoProfile -Command "Start-Sleep -Seconds 1"
                            ) else (
                                echo ‚¨ÜÔ∏è Deploying new version...
                                powershell -NoProfile -Command "Start-Sleep -Seconds 1"
                            )
                        """
                    }
                }
            }
        }

        stage('Verify Deployment') {
            when {
                expression { return params.ROLLBACK == false }
            }
            steps {
                script {
                    echo "üîç Verifying deployment on environment: ${params.ENV}"
                    sleep(time: 1, unit: 'SECONDS')
                    echo "‚úÖ Verification passed."
                }
            }
        }
    }

    post {
        always {
            echo "üèÅ Pipeline finished. ENV=${params.ENV}, ROLLBACK=${params.ROLLBACK}"
        }
        success {
            echo "üéâ SUCCESS: Deployment to ${params.ENV} completed."
        }
        failure {
            echo "‚ùå FAILURE: Deployment failed or rollback executed."
        }
    }
}
